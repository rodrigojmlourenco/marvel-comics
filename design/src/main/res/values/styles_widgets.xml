<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
    Text
    -->
    <style name="Widget.AppTheme.H1" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Headline1</item>
    </style>

    <style name="Widget.AppTheme.H2" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Headline2</item>
    </style>g

    <style name="Widget.AppTheme.H3" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Headline3</item>
    </style>

    <style name="Widget.AppTheme.H4" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Headline4</item>
    </style>

    <style name="Widget.AppTheme.H5" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Headline5</item>
    </style>

    <style name="Widget.AppTheme.P" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Body1</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="Widget.AppTheme.D" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Caption</item>
    </style>


    <!--
    Buttons
    @see https://material.io/components/buttons/
    @see https://material.io/components/selection-controls/
    -->
    <style name="Widget.AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Button</item>
        <item name="backgroundTint">@color/selector_button_tint</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="Widget.AppTheme.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Button.Secondary</item>
        <item name="strokeColor">@color/selector_secondary_button_stroke_color</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

    <style name="Widget.AppTheme.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Button.Text</item>
    </style>

    <style name="Widget.AppTheme.Toggle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="useMaterialThemeColors">false</item>
    </style>

    <style name="Widget.AppTheme.Checkbox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="useMaterialThemeColors">false</item>
        <item name="android:buttonTint">@color/selector_control_tint</item>
    </style>

    <style name="Widget.AppTheme.Radio" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="useMaterialThemeColors">false</item>
        <item name="android:buttonTint">@color/selector_control_tint</item>
    </style>

    <style name="TextAppearance.AppTheme.BaseButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.033</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.AppTheme.Button" parent="TextAppearance.AppTheme.BaseButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.AppTheme.Button.Secondary" parent="TextAppearance.AppTheme.BaseButton"/>

    <style name="TextAppearance.AppTheme.Button.Text" parent="TextAppearance.AppTheme.BaseButton">
        <item name="android:textSize">14sp</item>
    </style>

    <!--
    Text Fields
    @see https://material.io/develop/android/components/text-input-layout/
    -->
    <style name="Widget.AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.AppTheme.BoxedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="enforceMaterialTheme">false</item>
        <item name="enforceTextAppearance">false</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="passwordToggleTint">@color/selector_text_input_end_icon</item>
        <item name="boxStrokeColor">@color/selector_text_input_stroke</item>
        <item name="hintTextAppearance">@style/TextAppearance.AppTheme.BoxedTextInputLayoutHint</item>
        <item name="hintTextColor">@color/textColorLight</item>
    </style>

    <style name="Widget.AppTheme.BoxedTextInputLayout.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textColorHint">@color/textColorLight</item>
    </style>

    <style name="TextAppearance.AppTheme.BoxedTextInputLayoutHint" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/textColorLight</item>
    </style>

    <!--
    Bottom Navigation
    @see https://material.io/develop/android/components/bottom-navigation-view/
    -->
    <style name="Widget.AppTheme.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/selector_bottomnav_icon_tint</item>
        <item name="itemTextColor">@color/selector_bottomnav_icon_tint</item>
    </style>

    <!-- Topbar
    @see https://material.io/develop/android/components/app-bar-layout/
    -->
    <style name="Widget.AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <!--        <item name="contentInsetStart">0dp</item>-->
    </style>

    <!-- Snackbar -->
    <style name="Widget.AppTheme.Snackbar" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Body1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>