<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Android Theme Colors -->
    <color name="colorPrimary">@color/grey900</color>
    <color name="colorPrimaryDark">@color/black</color>
    <color name="colorAccent">@color/mint</color>
    <color name="statusBarColor">@color/colorPrimary</color>
    <color name="colorError">@color/salmon</color>

    <!-- Android Material Theme Colors -->
    <color name="colorPrimaryVariant">@color/mint</color>
    <color name="colorSecondaryVariant">@color/mint</color>
    <color name="colorOnPrimary">@color/white</color>
    <color name="colorOnSecondary">@color/white</color>

    <color name="colorOnError">@color/white</color>
    <color name="scrimBackground">@color/grey700</color>

    <!-- Background Colors -->
    <color name="colorBackground">@color/grey300</color>
    <color name="colorOnBackground">@color/grey600</color>
    <color name="colorSurface">@color/white</color>
    <color name="colorOnSurface">@color/grey600</color>

    <!-- Overlay Colors (Semi-Transparent) -->
    <color name="colorOverlayWhite">@color/white_alpha_90</color>

    <!-- Text Colors -->
    <color name="textColorDark">@color/grey600</color>
    <color name="textColorMedium">@color/grey500</color>
    <color name="textColorLight">@color/grey400</color>

    <!-- Icon Colors -->
    <color name="iconColorDark">@color/mint_dark</color>
    <color name="iconColorLight">@color/mint</color>

    <!-- Base Colors -->
    <color name="mint" tools="ignore">#00c27e</color>
    <color name="mint_dark" tools="ignore">#06A16A</color>
    <color name="mint_light" tools="ignore">#5cf5ae</color>
    <color name="mint_lighter" tools="ignore">#e5f8f2</color>

    <color name="salmon" tools="ignore">#EC564A</color>

    <!-- Grey Scale -->
    <color name="white" tools="ignore">#FFF</color>
    <color name="white_alpha_90" tools="ignore">#F2FFFFFF</color>
    <color name="grey50">#fafafa</color>
    <color name="grey100">#f5f5f5</color>
    <color name="grey200">#eeeeee</color>
    <color name="grey300">#e0e0e0</color>
    <color name="grey400">#bdbdbd</color>
    <color name="grey500">#9e9e9e</color>
    <color name="grey600">#757575</color>
    <color name="grey700">#616161</color>
    <color name="grey800">#424242</color>
    <color name="grey900">#212121</color>
    <color name="black">#000</color>

    <!-- Note: Transparency Prefix
        100% — FF
        95% — F2
        90% — E6
        85% — D9
        80% — CC
        75% — BF
        70% — B3
        65% — A6
        60% — 99
        55% — 8C
        50% — 80
        45% — 73
        40% — 66
        35% — 59
        30% — 4D
        25% — 40
        20% — 33
        15% — 26
        10% — 1A
        5% — 0D
        0% — 00
    -->
</resources>
