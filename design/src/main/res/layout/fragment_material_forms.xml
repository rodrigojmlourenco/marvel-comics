<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:ignore="HardcodedText">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

        <io.procrastination.design.view.text.TextH2
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search Forms"/>

        <io.procrastination.design.view.form.BonesSearchView
                android:id="@+id/input_bsearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp" />

        <io.procrastination.design.view.text.TextH2
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular Forms"/>

        <io.procrastination.design.view.form.BoxedTextForm
                android:id="@+id/input_boxed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="This is a boxed text form" />

        <io.procrastination.design.view.form.BoxedTextForm
                android:id="@+id/input_boxed_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="This is a password boxed text form"
                android:inputType="textPassword" />


        <io.procrastination.design.view.form.TextForm
                android:id="@+id/input_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="This is a boxed text form" />

        <io.procrastination.design.view.form.TextForm
                android:id="@+id/input_form_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="This is a password text form"
                android:inputType="textPassword" />

        <io.procrastination.design.view.text.TextH3
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Regular Forms - Success state"/>

        <io.procrastination.design.view.form.BoxedTextForm
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="This is a boxed text form"
                app:success="true"/>

        <io.procrastination.design.view.form.TextForm
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="This is a boxed text form"
                app:success="true"/>

        <io.procrastination.design.view.text.TextH3
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Regular Forms - Error state"/>

        <io.procrastination.design.view.form.BoxedTextForm
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="This is a boxed text form"
                app:error="This is an error"/>

        <io.procrastination.design.view.form.TextForm
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="This is a boxed text form"
                app:error="This is an error"/>

    </LinearLayout>

</ScrollView>